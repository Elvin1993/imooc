extends ../layout

block content
	.container
		.row
			.col-md-7
				embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="100%",height="600",allowscriptaccess="true",align="middle",type="application/x-shockwave-flash",loop="false")
			.col-md-5
				dl.dl-horizontal
					dt 电影名称
					dt=movie.title
					dt 导演
					dt=movie.doctor
					dt 国家
					dt=movie.country
					dt 语言
					dt=movie.language
					dt 上映年份
					dt=movie.year
					dt 简介
					dt=movie.summary